systemLog:
    destination: file
    path: "/var/log/mongodb/mongod.log"
    logAppend: true
processManagement:
    fork: true
    pidFilePath: "/var/run/mongodb/mongod.pid"
net:
    bindIp: 0.0.0.0
    port: <%= @shard_port %>
replication:
    replSetName: rs0
storage:
    dbPath: "/var/lib/mongo"
sharding:
    clusterRole: shardsvr
